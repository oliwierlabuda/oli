local Players = game:GetService("Players")
local StarterGui = game:GetService("StarterGui")
local ContextActionService = game:GetService("ContextActionService")

local player = Players.LocalPlayer

-- Lock menu and reset
StarterGui:SetCore("ResetButtonCallback", false)
StarterGui:SetCoreGuiEnabled(Enum.CoreGuiType.All, false)

-- Lock camera movement
ContextActionService:BindAction("BlockCamera", function() return Enum.ContextActionResult.Sink end, false,
	Enum.PlayerActions.CharacterForward,
	Enum.PlayerActions.CharacterBackward,
	Enum.PlayerActions.CharacterLeft,
	Enum.PlayerActions.CharacterRight,
	Enum.PlayerActions.CameraZoomIn,
	Enum.PlayerActions.CameraZoomOut
)

-- Create loading screen GUI
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "NeonLoadingScreen"
screenGui.IgnoreGuiInset = true
screenGui.ResetOnSpawn = false
screenGui.Parent = player:WaitForChild("PlayerGui")

-- Fullscreen black background
local background = Instance.new("Frame")
background.Size = UDim2.new(1, 0, 1, 0)
background.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
background.BorderSizePixel = 0
background.Parent = screenGui

-- Add green gradient background effect
local gradient = Instance.new("UIGradient")
gradient.Color = ColorSequence.new{
	ColorSequenceKeypoint.new(0, Color3.fromRGB(0, 100, 0)),
	ColorSequenceKeypoint.new(1, Color3.fromRGB(0, 255, 0))
}
gradient.Rotation = 45
gradient.Parent = background

-- Progress bar setup
local barBackground = Instance.new("Frame")
barBackground.Size = UDim2.new(0.6, 0, 0.05, 0)
barBackground.Position = UDim2.new(0.2, 0, 0.5, 0)
barBackground.BackgroundColor3 = Color3.fromRGB(20, 60, 20)
barBackground.BorderColor3 = Color3.fromRGB(0, 255, 0)
barBackground.BorderSizePixel = 2
barBackground.Parent = background

local barFill = Instance.new("Frame")
barFill.Size = UDim2.new(0, 0, 1, 0)
barFill.BackgroundColor3 = Color3.fromRGB(180, 255, 0)
barFill.BorderSizePixel = 0
barFill.Parent = barBackground

-- Percent Text
local percentText = Instance.new("TextLabel")
percentText.Size = UDim2.new(0.6, 0, 0.05, 0)
percentText.Position = UDim2.new(0.2, 0, 0.45, 0)
percentText.BackgroundTransparency = 1
percentText.TextColor3 = Color3.fromRGB(0, 255, 0)
percentText.TextScaled = true
percentText.Font = Enum.Font.Arcade
percentText.Text = "Loading... 0%"
percentText.Parent = background

-- Loading logic
local TOTAL_PERCENT = 100
local SECONDS_PER_PERCENT = 3

for percent = 1, TOTAL_PERCENT do
	percentText.Text = "Loading... " .. percent .. "%"
	barFill:TweenSize(UDim2.new(percent / 100, 0, 1, 0), "Out", "Linear", 0.5, true)
	wait(SECONDS_PER_PERCENT)
end

-- Unlock everything after loading
screenGui:Destroy()
StarterGui:SetCoreGuiEnabled(Enum.CoreGuiType.All, true)
StarterGui:SetCore("ResetButtonCallback", true)
ContextActionService:UnbindAction("BlockCamera")
